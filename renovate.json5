{
  extends: [
    "config:base" // ベースとなる設定を読み込む
  ],
  schedule: [
    "* 8-9 * * 1" // PR の生成を毎週月曜日の8時から9時の間に行う
  ],
  automergeSchedule: [
    "* 8-9 * * 5" // PR の生成と自動マージを毎週金曜日の8時から9時の間に行う
  ],
  dependencyDashboard: false, // Dependency Dashboard を無効化
  requiredStatusChecks: null, // ステータスチェックを行わない
  prHourlyLimit: 10, // 1時間あたりの PR 作成上限
  prConcurrentLimit: 10, // 同時にオープンできる PR 上限
  branchConcurrentLimit: 10, // 同時に作成できるブランチ上限
  minimumReleaseAge: "7 days", // リリースされてから7日後に更新を行う

  major: {
    enabled: false // major の更新は対象外
  },

  labels: [
    'renovate:{{depName}}',
    'renovate:{{depName}}/{{newVersion}}',
    'datasource:{{datasource}}',
  ],

  packageRules: [
    {
      // major 以外の PR は自動マージ
      matchUpdateTypes: ["minor", "patch", "pin", "digest"],
      automerge: true
    },
  ]
}
